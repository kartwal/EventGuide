<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.helloworld" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>EventGuide</name>
    <description>
        Search, add, participate.
    </description>
    <author email="kartwal@kartwal.pl" href="kartwal.pl">
        Adrianna GaÅ‚ka, Kamil Walas
    </author>
    <content src="index.html" />
    <access origin="*" />

    <plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
    <plugin name="cordova-plugin-statusbar"/>
    <plugin name="phonegap-plugin-barcodescanner"/>
    <plugin name="cordova-plugin-console"/>
    <plugin name="cordova-plugin-file-transfer" />
    <plugin name="cordova-plugin-calendar" />
    <plugin name="cordova-plugin-inappbrowser" />
    <plugin name="cordova-plugin-pdialog" />
    <plugin name="cordova-plugin-splashscreen" />
    <plugin name="cordova-plugin-network-information" />

    <plugin name="uk.co.workingedge.phonegap.plugin.launchnavigator" spec="3" />

    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />

    <plugin name="cordova-plugin-whitelist"/>

	  <access origin="*"/>

    <platform name="android">
              <icon src="res/android/mipmap-hdpi/ic_launcher.png" density="ldpi" />
              <icon src="res/android/mipmap-ldpi/ic_launcher.png" density="mdpi" />
              <icon src="res/android/mipmap-mdpi/ic_launcher.png" density="hdpi" />
              <icon src="res/android/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />
     </platform>

     <platform name="android">
       <splash src="res/android/splash.png"/>
     </platform>




</widget>
